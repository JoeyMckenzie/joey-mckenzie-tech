---
import { Icon } from 'astro-icon';

const hash = import.meta.env.CF_PAGES_COMMIT_SHA;
const hashRef = `https://github.com/JoeyMckenzie/joey-mckenzie-tech/commit/${hash}`;
const hashDisplay = hash?.substring(0, 6);
---

<div
  class="mx-auto inline-flex flex-row items-center gap-x-2 md:order-1 md:mx-0"
>
  <p class="text-center font-ubuntu text-xs leading-5 text-neutral-500">
    Powered by
  </p>

  <!-- Cloudflare -->
  <a
    href="https://cloudflare.com"
    class="text-neutral-500 hover:text-neutral-400"
  >
    <span class="sr-only">Vercel</span>
    <Icon name="simple-icons:cloudflare" class="h-6 w-6" />
  </a>

  <!-- Astro -->
  <a href="https://astro.build" class="text-neutral-500 hover:text-neutral-400">
    <span class="sr-only">Astro</span>
    <Icon name="simple-icons:astro" class="h-6 w-6" />
  </a>

  <!-- Fly/Rust -->
  <a href="https://fly.io" class="text-neutral-500 hover:text-neutral-400">
    <span class="sr-only">Fly</span>
    <Icon name="mdi:language-rust" class="h-6 w-6" />
  </a>

  <!-- Git info -->
  <a
    href={hashRef}
    class="text-center font-ubuntu text-xs leading-5 text-neutral-500 hover:text-neutral-400"
  >
    {hashDisplay}
  </a>
</div>
