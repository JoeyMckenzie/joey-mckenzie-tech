---
import { Icon } from 'astro-icon';
import PoweredBy from './PoweredBy.astro';
import Socials from './Socials.astro';
import SpotifyNowPlaying from './spotify/SpotifyNowPlaying.svelte';

const nowPlayingUrl = import.meta.env.API_BASE_URL;
---

<footer
  class="mx-auto flex max-w-4xl flex-col gap-y-6 py-12 px-6 md:flex-row md:items-center md:justify-between md:gap-y-0 lg:px-8"
>
  <Socials />
  <SpotifyNowPlaying nowPlayingUrl={nowPlayingUrl} client:load>
    <Icon class="h-6 w-6" name="logos:spotify-icon" />
  </SpotifyNowPlaying>
  <PoweredBy />
</footer>
