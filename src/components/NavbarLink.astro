---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<a
  href={href}
  class:list={[
    'inline-flex px-2 py-1 font-merriweather font-medium text-neutral-400',
    {
      'rounded border border-transparent bg-neutral-800 text-neutral-300 hover:bg-neutral-500 focus:outline-none':
        isActive,
    },
  ]}
  {...props}
>
  <slot />
</a>
