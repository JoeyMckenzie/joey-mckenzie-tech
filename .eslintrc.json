{
  "root": true,
  "extends": [
    "plugin:vue/vue3-recommended",
    "prettier"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "overrides": [
    {
      "files": [
        "layouts/default.vue",
        "pages/**/*.vue",
        "components/ui/**/*.vue"
      ],
      "rules": {
        "vue/multi-word-component-names": "off"
      }
    }
  ]
}
