{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "exclude": [
    "./node_modules/**",
    ".astro/**",
    ".turbo/**",
    ".dist/**",
    "target/**"
  ]
}
