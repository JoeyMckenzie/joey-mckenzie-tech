{
  "name": "joeymckenzie.tech",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:content\" \"pnpm:dev:solid\"",
    "build:content": "contentlayer build",
    "build:content-clear": "contentlayer build --clearCache",
    "dev:content": "contentlayer dev",
    "dev:solid": "vinxi dev",
    "build": "vinxi build",
    "start": "vinxi start",
    "tailwind": "prettier --plugin prettier-plugin-tailwindcss --write src/",
    "check": "pnpm dlx @biomejs/biome check --apply src/",
    "fmt": "pnpm dlx @biomejs/biome format --write --skip-errors src/",
    "fix": "pnpm dlx @biomejs/biome lint --apply src/",
    "lint": "pnpm dlx @biomejs/biome lint src/",
    "ci": "pnpm dlx @biomejs/biome ci src/"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": "pnpm run fmt"
  },
  "dependencies": {
    "@solidjs/router": "^0.10.5",
    "@solidjs/start": "^0.4.2",
    "autoprefixer": "^10.4.14",
    "contentlayer": "^0.3.4",
    "date-fns": "^3.0.6",
    "postcss": "^8.4.26",
    "rehype-highlight": "^7.0.0",
    "rehype-pretty-code": "^0.12.3",
    "solid-js": "^1.8.7",
    "tailwindcss": "^3.3.3",
    "vinxi": "0.0.59"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "concurrently": "^8.2.2",
    "lint-staged": "^15.2.0",
    "prettier-plugin-tailwindcss": "^0.5.10"
  }
}
