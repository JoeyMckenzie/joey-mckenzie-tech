{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "fmt": "prettier --write --plugin=prettier-plugin-tailwindcss --plugin=@shufo/prettier-plugin-blade \"{resources,content}/**/*.{js,blade.php,css,md}\""
    },
    "lint-staged": {
        "**/*.blade.php": "npm run fmt",
        "**/*.php": [
            "composer run fmt",
            "composer run rector"
        ]
    },
    "devDependencies": {
        "@shufo/prettier-plugin-blade": "^1.14.1",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.15",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.7.4",
        "daisyui": "^4.12.10",
        "laravel-vite-plugin": "^1.0",
        "lint-staged": "^15.2.10",
        "postcss": "^8.4.31",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "tailwindcss": "^3.1.0",
        "vite": "^5.0"
    },
    "dependencies": {
        "shiki": "^1.21.0"
    }
}
